<?xml version="1.0" ?>
<resources xmlns="https://api-platform.com/schema/metadata"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="https://api-platform.com/schema/metadata https://api-platform.com/schema/metadata/metadata-2.0.xsd"
>
    <resource class="%app.model.term.class%" shortName="Term">
        <attribute name="validation_groups">sylius</attribute>
        <attribute name="order">
            <attribute name="id">ASC</attribute>
        </attribute>

        <collectionOperations>
            <collectionOperation name="shop_get">
                <attribute name="method">GET</attribute>
                <attribute name="path">/shop/terms</attribute>
                <attribute name="normalization_context">
                    <attribute name="groups">shop:term:read</attribute>
                </attribute>
            </collectionOperation>
        </collectionOperations>

        <property name="id" identifier="true" writable="false" />
        <property name="code"  readable="true" writable="true" />
        <property name="body"  readable="true" writable="true" />
    </resource>
</resources>
